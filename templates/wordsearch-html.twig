<table border="1" align="center" cellpadding="4" cellspacing="0">
    <tr>
        <td valign="top">
            <table border="0" align="center"
                   style="font-size: 12pt; font-family: Arial,sans-serif;">
                {% for y in 0..numRows %}
                    <tr>
                        {% for x in 0..numCols %}
                            <td align="center">
                                {{ grid[y][x] }}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </table>
        </td>
        <td valign="top">
            <strong>Word List</strong><br>
            <table border="0" cellpadding="0" cellspacing="0" align="left"
                   style="font-size: 10pt;">
                <tr>
                    <td valign="top">
                        {% for i in 0..wordListLen %}
                            {{ wordList[i] }}<br>
                        {% endfor %}
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<table border="0" align="center"
       style="color: grey; font-size: 8pt; font-family: Times Roman, Arial,sans-serif;">
    <tr>
        <td valign="middle">
            <img src="wordsearcher.png" width="16" height="16" border="0" alt=""
                 align="right" style="-moz-opacity: 0.2;">
        </td>
        <td align="center">
            {{ createdOnString }}
            WordSearcher {{ version }} &copy; 2007-2018
        </td>
        <td valign="middle">
            <img src="wordsearcher.png" width="16" height="16" border="0" alt=""
                 align="right" style="-moz-opacity: 0.2;">
        </td>
    </tr>
</table>

